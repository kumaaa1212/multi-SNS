// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  authorId String  @unique
  name String
  avatar String
  followers Followers[]
  following Following[]
  likes Like[]
}

model Like {
  id     Int    @id @default(autoincrement())
  postId Int
  authorId String
  post   Post   @relation(fields: [postId], references: [id])
  user   User   @relation(fields: [authorId], references: [authorId])
  @@unique([postId, authorId])
}


model Followers {
  id Int @id @default(autoincrement())
  userId String
  followerId String
  user User @relation(fields: [userId], references: [authorId])
}

model Following {
  id Int @id @default(autoincrement())
  userId String
  followingId String
  user User @relation(fields: [userId], references: [authorId])
}

model Post{
  id Int @id @default(autoincrement())
  content String
  title String
  createdAt DateTime @default(now())
  labels PostLabel[]
  authorId String?
  authorName String
  thumbnailText String
  thumbnailImg String
  likes Like[]
}

model PostLabel {
  id Int @id @default(autoincrement())
  label String
  name String
  league String
  img String
  postId Int
  post Post @relation(fields: [postId], references: [id])
}

model Tweet{
  id Int @id @default(autoincrement())
  content String
  createdAt DateTime @default(now())
  authorId String?
}

model Room {
  id String @id @default(uuid())
  user1Id String
  user2Id  String
  createdAt DateTime @default(now())
}
 model Message{
  id Int @id @default(autoincrement())
  content String
  createdAt DateTime @default(now())
  authorId String?
  senderId String
  roomId String?
 }
