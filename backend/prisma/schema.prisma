// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post{
  id Int @id @default(autoincrement())
  content String
  createdAt DateTime @default(now())
  authorId String?
}

model Tweet{
  id Int @id @default(autoincrement())
  content String
  createdAt DateTime @default(now())
  authorId String?
}


model Room {
  id String @id @default(uuid()) // UUIDなどの一意のIDを自動生成
  user1Id String
  user2Id  String
  createdAt DateTime @default(now())
}
 model Message{
  id Int @id @default(autoincrement())
  content String
  createdAt DateTime @default(now())
  authorId String?
  senderId String
  roomId String?
 }
